<script type="text/javascript">
    require.config({
        paths:{
            'echarts':chart_path,
            'echarts/chart/line':chart_path,
        }
    });

    require(
        ['echarts','echarts/chart/line'],
        function (ec) {

// ------firstChart start----------

            var firstChart = ec.init(document.getElementById("first"));

            option = {};

            firstChart.setOption(option);
            // -----firstChart end-----------

            // -----secondChart start-----
            var secondChart = ec.init(document.getElementById("second"));

            option={};

            secondChart.setOption(option);
            // -----secondChart end-----

        }

    );

</script>
